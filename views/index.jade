extends header

block content
    div.row
        div.small-12.columns
            h1 Welcome to Transmission!
            p Please login or click the Go to Registration button to register.

    div.row
        div.small-6.columns
        if (msg.length != 0)
            div.alert.alert-info.text-center(role="alert") #{msg}
    div.row
        div.small-6.columns
            form.form-inline(method='POST', action='/login')
                div.form-group
                    label.sr-only(for='username') Username
                    input.form-control#username(type='text', name='username', placeholder='Username', value='#{username}')
                div.form-group
                    label.sr-only(for='password') Password
                    input.form-control#password(type='password', name='password', placeholder='Password')
                button.button.small(type='submit') Submit
                &nbsp;
                a.button.small(href="/register") Go to Registration
